<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('../partials/head'); %>
	</head>
	<body class="container">
		<header><%- include('../partials/header'); %></header>
		<main>
			<div class="container">
				
				<h1>Top Astronauts</h1>
				<div class="container">					
        </div>
				<div class="row justify-content-between">		   
		  
			 	<% employees.forEach(function(employee){ %>
            	<p><div class="card" style="width: 18rem">
					<img src="<%= employee[1].picture %>" class="card-img-top" alt="...">
					<div class="card-body" 
					  <p class="card-text"><%= employee[1].firstName %> <%= employee[1].lastName %></p>
					  <p class="card-text"><%= employee[1].email %></p>
					  <a class="btn btn-secondary mtn-sm" href="directory/<%= employee[0]%>";">View Profile</a>
					  <a class="btn btn-info mtn-sm" href="edit/<%= employee[0]%>">Edit</a>
					  <a class="btn btn-danger" href="delete/<%= employee[0]%>"style="height:85px;width:85px">
						<i class="fa fa-trash-o fa-lg"></i>Delete</a>
					</div>
				  </div></p>
                <% }); %>					
           <!-- Try mocking up some Bootstrap cards or columns with some hard coded data to get an idea of how your templates should look. -->
				</div>
			</div>
		</main>
		<footer><%- include('../partials/footer'); %></footer>
	</body>
</html>
